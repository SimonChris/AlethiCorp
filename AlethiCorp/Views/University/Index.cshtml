@model IEnumerable<AlethiCorp.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @if (!item.Completed)
            {
                <a class="btn btn-default" href="@Url.Action("Edit", new { id = item.Id })">Take course</a>
            }
            else
            {
                <a class="btn btn-default" href="@Url.Action("Edit", new { id = item.Id })">Retake course</a>
            }
        </td>
    </tr>
}

</table>
