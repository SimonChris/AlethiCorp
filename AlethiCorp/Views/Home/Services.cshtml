@model List<string>

@{
    ViewBag.Title = "Services";
}

<h3>AlethiCorp offers a wide variety of services, including, but not limited to:</h3>

<table class="table">
@for (int i = 0; i < Model.Count(); i += 3)
{
    <tr>
        <td>
            @Model[i]
        </td>
        <td>
            @if(Model.Count() > i + 1)
            {
                @Model[i + 1]
            }
        </td>
        <td>
            @if(Model.Count() > i + 2)
            {
               @Model[i + 2]
            }
        </td>
    </tr>
}

</table>